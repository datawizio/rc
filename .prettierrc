{
  "semi": true,
  "useTabs": false,
  "singleQuote": false,
  "jsxSingleQuote": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "tabWidth": 2,
  "proseWrap": "always",
  "arrowParens": "avoid",
  "trailingComma": "none",
  "quoteProps": "preserve",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 100,
        "proseWrap": "preserve"
      }
    }
  ]
}
